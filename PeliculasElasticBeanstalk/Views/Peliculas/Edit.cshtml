@model Pelicula

<h1>Editar película</h1>

<h4>Pelicula</h4>
<hr />
<form method="post">
    <label>Id</label>
    <input type="number" name="idpelicula" value="@Model.IdPelicula" class="form-control" readonly />
    <label>Título</label>
    <input type="text" name="titulo" value="@Model.Titulo" class="form-control" />
    <label>Género</label>
    <input type="text" name="genero" value="@Model.Genero" class="form-control" />
    <label>Director</label>
    <input type="text" name="director" value="@Model.Director" class="form-control" /><br />
    <button type="submit" class="btn btn-success">Editar película</button>
</form>
<br />
<a asp-action="Index" asp-controller="Peliculas">Volver a lista</a>